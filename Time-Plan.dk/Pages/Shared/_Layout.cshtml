<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Time_Plan.dk</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Time_Plan.dk.styles.css" asp-append-version="true" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        @if (User.IsInRole("Admin"))
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed border-bottom box-shadow mb-3" style="background-color: #cab167;">
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">
                            <table>
                                <tr>
                                    <td style="text-align: center"><span class="black">let</span><span class="white">lej.dk</span></td>
                                </tr>
                                <tr>
                                    <td style="text-align: center"><span class="white">Time</span><span class="black">-plan.dk</span></td>
                                </tr>
                            </table>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 justify-content-center" style="font-size:20px;">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Vagt</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/AShift/Oversigt">Oversigt</a></li>
                                        <li><a class="dropdown-item" href="/AShift/Create">Opret Vagt</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Medarbejder</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Admin/Index">Oversigt</a></li>
                                        <li><a class="dropdown-item" href="/Admin/Create">Opret Medarbejder</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">Tidsregistrering</a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Admin/Index">Oversigt</a></li>
                                        <li><a class="dropdown-item" href="/Admin/Create">Opret Tidsregistrering</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <div class="login-bar">

                                <a href="../Profil" class="navbar-text" style="margin-right: 10px;">Du er logget ind</a>
                                </div>
                            <div class="login-bar">
                                <a href="/LogOut/LogOutPage" class="login-link">Log ud</a>

                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        }
        else
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light fixed border-bottom box-shadow mb-3" style="background-color: #cab167;">
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-page="/Index">
                            <table>
                                <tr>
                                    <td style="text-align: center"><span class="black">let</span><span class="white">lej.dk</span></td>
                                </tr>
                                <tr>
                                    <td style="text-align: center"><span class="white">Time</span><span class="black">-plan.dk</span></td>
                                </tr>
                            </table>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1 justify-content-center" style="font-size:20px;">
                                <li class="nav-item">
                                    <a class="nav-link" href="/Ashift/Oversigt">Vagter</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/Admin/Index">Medarbejdere</a>
                                </li>
                                 
                               
                            </ul>
                            <div class="login-bar">
                                <span class="navbar-text" style="margin-right: 10px;">Du er logget ind</span>
                                <a href="/LogOut/LogOutPage" class="login-link">Log ud</a>

                            </div>
                        </div>
                    </div>
                </nav>
            </header>
        }

        
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <nav class="navbar fixed-bottom navbar-expand-sm navbar-dark " style="background-color:#cab167;">
        <div class="container-fluid justify-content-end">
            <a class="navbar-brand" style="font-size:16px;color: black;" href="mailto:support@time-plan.dk">support@time-plan.dk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
