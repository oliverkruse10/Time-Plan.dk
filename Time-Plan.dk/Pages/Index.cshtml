@page
@model IndexModel

<main class="form-signin w-100 m-auto">
    <div style="display:flex;justify-content: center;transform: translate(0%, 34%); font-family: Arial, Helvetica, sans-serif;">
        <form style="width:35%;" method="post">
            <div style="  display: flex;justify-content: center;">
            <object type="image/svg+xml" data="~/Img/LetLej-logo.svg" style="width:60%;height:auto;padding-bottom:25px;"> </object>
            </div>

            <div class="form-floating">
                <input asp-for="LønNr" type="text" value="" id="lønnr" name="lønnr" required class="form-control" id="floatingInput" placeholder="Løn Nummer">
                <label for="floatingInput">Lønnummer</label>
            </div>
            <div class="form-floating">
                <input asp-for="Password" type="password" value="@Model.Password" id="password" required class="form-control" id="floatingPassword" placeholder="Password">
                <label for="floatingPassword">Password</label>
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit">Log ind</button>

        </form>
    </div>
</main>

<div>
    @ViewData["Message"]
</div>


