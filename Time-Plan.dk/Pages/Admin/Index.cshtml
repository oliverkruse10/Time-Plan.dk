@page
@model Time_Plan.dk.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Medarbejdere</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-page="Create">Opret ny</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Rolle")
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="firstname_asc">Fornavn</a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="lastname_asc">Efternavn</a>
                </th>
                <th>
                    @Html.DisplayName("Adresse")
                </th>
                <th>
                    @Html.DisplayName("Mobil")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Email)
                </th>
                <th>
                    @Html.DisplayName("Kørekort")
                </th>
                <th>
                    @Html.DisplayName("Kørekort - Trailer")
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="lønnr_asc">LønNr</a>
                </th>



            </tr>
        </thead>
        <tbody class="OversigtTabel">
            @foreach (var item in Model.Person)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriversLicense)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DriversLicenseWithTrailer)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LønNr)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Rediger</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Detaljer</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Slet</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    
    <table class="table">
        <thead>
            <tr>
                
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="firstname_asc">Fornavn</a>
                </th>
                <th>
                    <a asp-page="./Index" asp-route-sortOrder="lastname_asc">Efternavn</a>
                </th>
                
                <th>
                    @Html.DisplayName("Mobil")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Person[0].Email)
                </th>
                



            </tr>
        </thead>
        <tbody class="OversigtTabel">
            @foreach (var item in Model.Person)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    
                   
                </tr>
            }
        </tbody>
    </table>
}

